<% content_for :page_title do %>
  <%= link_to Spree.t(:pages), spree.admin_pages_url %> /
  <%= @page.name %>
<% end %>

<%= form_for [:admin, @page], method: :put do |f| %>
  <fieldset>
    <%= render partial: 'form', locals: { f: f } %>
    <%= render partial: 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>
